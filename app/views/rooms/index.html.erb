<div>
  <ul>
  	<%= search_form_for @q do |f| %>
      <%= f.search_field :title_or_detail_cont %>
      <%= f.submit "検索" %>
    <% end %>
    <% @rooms.each do |room| %>
      <li><%= link_to room.title, room_path(room) %></li>
      <li><%= room.detail %></li>
      <li><%= room.created_at.strftime("%Y-%m-%d %H:%M") %></li>
    <% end %>
  </ul>
  <li><%= link_to 'NEW ROOM', new_room_path %></li>
</div>
