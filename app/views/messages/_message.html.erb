<div class="kaiwa">
    <figure class="kaiwa-img-left">
      	<%= attachment_image_tag message.user, :profile_image, :fill, 40, 40, format: 'jpeg' ,fallback: "/images/noimage.jpeg" %>
      	<figcaption class="kaiwa-img-description">
        	<%= message.user.name %>
        	<p>No.<%= message.user.id %></p>
      	</figcaption>
    </figure>
    <div class="kaiwa-text-left">
      <%= simple_format(message.content) %>
      <p class="room-mozi"><%= message.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
</div>
